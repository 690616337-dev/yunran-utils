{
  "name": "yunran-tools-v3",
  "version": "1.0.0",
  "description": "云褍实用工具 v3 - Electron + React + Python FastAPI",
  "main": "electron/main.js",
  "author": "云褍",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "node scripts/start.js",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python -m uvicorn main:app --reload --port 8000",
    "dev:electron": "wait-on http://localhost:5173 http://127.0.0.1:8000/api/health && electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "electron-builder",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:win:x64": "npm run build:frontend && electron-builder --win --x64",
    "build:win:arm64": "npm run build:frontend && electron-builder --win --arm64",
    "build:mac": "npm run build:frontend && electron-builder --mac",
    "build:mac:x64": "npm run build:frontend && electron-builder --mac --x64",
    "build:mac:arm64": "npm run build:frontend && electron-builder --mac --arm64",
    "build:all": "npm run build:frontend && electron-builder --win --mac --linux",
    "build:all:platforms": "node scripts/build-all.js all",
    "build:win:x64": "npm run build:frontend && electron-builder --win --x64",
    "build:win:arm64": "npm run build:frontend && electron-builder --win --arm64",
    "build:mac:x64": "npm run build:frontend && electron-builder --mac --x64",
    "build:mac:arm64": "npm run build:frontend && electron-builder --mac --arm64",
    "generate-icons": "node scripts/generate-icons.js",
    "postinstall": "cd frontend && npm install",
    "clean": "rimraf dist frontend/dist",
    "lint": "eslint electron/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "wait-on": "^7.2.0",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "electron-log": "^5.0.1",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.yunran.tools.v3",
    "productName": "云褍实用工具 v3",
    "copyright": "Copyright © 2024 云褍",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*",
      "!frontend/dist/**/*.map",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__",
          "!**/__pycache__",
          "!**/*.pyc",
          "!**/*.pyo",
          "!.env",
          "!.gitignore",
          "!temp",
          "!temp/**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/node-fetch/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "portable",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "云褍"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons",
      "category": "Utility",
      "maintainer": "云褍",
      "vendor": "云褍",
      "synopsis": "云褍实用工具 v3",
      "description": "Electron + React + Python FastAPI 实用工具集"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "云褍实用工具 v3",
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "publish": null
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
