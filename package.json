{
  "name": "yunran-tools",
  "version": "2.8.0",
  "description": "云褍实用工具 - 身份证工具、证件照处理、PDF合并、音乐转换",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder --win --mac",
    "dist": "npm run build:all"
  },
  "keywords": ["tools", "idcard", "photo", "pdf", "audio"],
  "author": "Yunran",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "pdf-lib": "^1.17.1",
    "jszip": "^3.10.1",
    "file-saver": "^2.0.5"
  },
  "build": {
    "appId": "com.yunran.tools",
    "productName": "云褍实用工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/",
      "assets/",
      "node_modules/"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
